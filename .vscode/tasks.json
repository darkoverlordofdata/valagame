{
    "version": "2.0.0",
    "cwd": "${workspaceRoot}",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
    },
    "isBackground": true,
    "tasks": [
        {
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "label": "build",
            "type": "shell",
            "command": "emcc",
            "args": [
                //
                // clang options
                //
                "-w",
                "-O2",
                "-std=c99",
                "-fdeclspec",
                "-o", "www/index.html",
                //
                // emscripten options
                //
                "-s", "WASM=1",
                "-s", "EMULATE_FUNCTION_POINTER_CASTS=1",
                "-s", "USE_WEBGL2=1",
                "-s", "USE_GLFW=3",
                "-s", "FULL_ES3=1",
                "--embed-file", "assets/assets.atlas",
                "--preload-file", "assets/d16a.png",
                "--preload-file", "assets/images/assets.png",
                "--preload-file", "assets/images/assets2.jpg",
                "--use-preload-plugins",
                //
                // GLib defines
                //
                "-D__EMSCRIPTEN__",
                "-DGLIB_COMPILATION",
                "-DG_DISABLE_CHECKS",
                "-DGOBJECT_COMPILATION",
                //
                // Includes
                //
                "-I./include",
                "-I./.lib/zerog/include",
                "-I./.lib/xna.framework/include",
                "-IC:/Users/darko/Documents/GitHub/glib",
                "-IC:/Users/darko/Documents/GitHub/glib/glib",
                "-IC:/Users/darko/Documents/GitHub/glib/gobject",
                "-IC:/msys64/mingw64/lib/libffi-3.2.1/include",
                "@files"
            ]
        }
    ] 
}